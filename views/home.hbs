{{#section 'title'}}NEWS24H{{/section}}

{{#each homePostList}}
<div class='pt-3'>
  <h4 class="block-title"> <span class="title-angle-shap"> {{this.[0]}} </span></h4>
  <div class="owl-carousel slide{{#if (isEqual @index 0)}}-one{{/if}} owl-theme py-4">
    {{#each this.[1]}}
    <div class="item item-before" style="background-image:url(/public/images/post_{{id}}_0.jpg)"> <a class="img-link" href="/post/{{id}}"></a>
      <div class="overlay-post-content">
        <div class="post-content">
          <div class="grid-category"> {{#if premium}}<a class="post-cat" style="background-color:#ff0000;color:#ffffff"> Premium </a> {{/if}}<a class="post-cat" href="/category/{{cid}}" style="background-color:#38a3d7;color:#ffffff"> {{cname}} </a></div>
          <h3 class="post-title"> <a href="/post/{{id}}"> {{title}} </a></h3>
          <ul class="post-meta-info">
            <li class="author"> <i class="fa fa-user"></i> {{uname}}</li>
            <li> <i class="fa fa-clock-o"></i> {{formatDate postdate 'll'}}</li>
            <li><i class="fa fa-tripadvisor" aria-hidden="true"></i> {{views}}</li>
          </ul>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div> 
{{/each}}