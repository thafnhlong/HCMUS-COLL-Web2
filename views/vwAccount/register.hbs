<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .swal-height {
            height: 30vh;
        }
    </style>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Đăng ký</title>

    <!-- Icons font CSS-->
    <link href="/public/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link href="/public/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <link href="/public/css/sweetalert2.min.css" rel="stylesheet" />
    <!-- Main CSS-->
    <link href="/public/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-blue p-t-100 p-b-100 font-robo">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title">Đăng ký </h2>
                    <form method="POST" id="frmRegister">
                        {{#if err}}
                        <div style="margin-bottom: 15px">
                            <span style="color: red;">{{err}}</span>
                            <input type="text" id="err" value={{err}} hidden>
                        </div>
                        {{/if}}
                        <div class="input-group">
                            <input class="input--style-3" type="text" placeholder="Họ và tên" name="name">
                        </div>
                        <div class="input-group">
                            <input class="input--style-3" type="email" placeholder="Email" name="email">
                        </div>
                        <div class="input-group">
                            <input class="input--style-3 js-datepicker" type="text" placeholder="Ngày sinh" name="dob">
                            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                        </div>
                        <div class="input-group">
                            <input class="input--style-3" id="my_input" type="password" placeholder="Mật khẩu" name="password">
                            <span  toggle="#password" class="zmdi field-icon toggle-password zmdi-eye-off" style="float: right;margin-top: -22px;
                            position: relative;z-index: 2;" id="check"></span>
                        </div>
                        <div class="input-group">
                            <input class="input--style-3"  id="my_input2" type="password" placeholder="Nhập lại mật khẩu" name="cf_password">
                            <span  toggle="#password" class="zmdi field-icon toggle-password zmdi-eye-off" style="float: right;margin-top: -22px;
                            position: relative;z-index: 2;" id="check2"></span>
                        </div>
                        <div class="input-group">
                            <div class="rs-select2 js-select-simple select--no-search">
                                <select name="permisson" id="permisson" >
                                    <option selected="selected" value="1">Độc giả</option>
                                    <option value="2">Nhà báo</option>
                                    <option value="3">Biên tập viên</option>
                                    <option value="4">Quản lý</option>
                                </select>
                                <div class="select-dropdown"></div>
                            </div>
                        </div>
                        <div class="input-group" id="writer">
                            <input  class="input--style-3" type="text" placeholder="Bí danh nhà báo" name="pseudonym">
                        </div>
                        <div class="p-t-10">                            
                            <div class="container-login100-form-btn" style="width: 200px;">
                                <div class="wrap-login100-form-btn">
                                    <div class="login100-form-bgbtn"></div>
                                    <button class="login100-form-btn">
                                        Đăng ký
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="p-t-20">
                            <a href="/account" class="signup-image-link" style="float:right" >Bạn đã có tài khoản - Đăng nhập ?</a><br>
                            <a href="/account/forgot-password" class="signup-image-link" style="float: right;margin-top: 20px;color: #666666" >Quên mật khẩu ?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/public/js/sweetalert2.min.js"></script>
    <!-- Vendor JS-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="/public/vendor/datepicker/moment.min.js"></script>
    <script src="/public/vendor/datepicker/daterangepicker.js"></script>
    <!-- Main JS-->
    <script src="/public/js/global.js"></script>
    <script>
        $(document).ready(function(){
            if($('#err').val()!=null){
                Swal.fire({
                    position: 'top-end',
                    icon: 'error',
                    title: 'Đăng ký thất bại',
                    showConfirmButton: false,
                    timer: 1500,
                    width: 300,
                    customClass: 'swal-height'
                });
            }
        }),
        $(function() {  
            $('#writer').hide(); 
            $('#permisson').change(function(){
                if($('#permisson').val() == '2') {
                    $('#writer').show();   
                }  
                else  {
                    $('#writer').hide();   
                } 
            });
        });
        $("#check").on('click',function(){
          var x = document.getElementById("my_input");
            if (x.type === "password") {
                x.type = "text";
                $(this).removeClass('zmdi field-icon toggle-password zmdi-eye-off');  
                $(this).addClass('zmdi zmdi-eye field-icon toggle-password');                 
            } else {
                x.type = "password";
                $(this).removeClass('zmdi zmdi-eye field-icon toggle-password');  
                $(this).addClass('zmdi field-icon toggle-password zmdi-eye-off'); 
            }
      });
      $("#check2").on('click',function(){
          var x = document.getElementById("my_input2");
            if (x.type === "password") {
                x.type = "text";
                $(this).removeClass('zmdi field-icon toggle-password zmdi-eye-off');  
                $(this).addClass('zmdi zmdi-eye field-icon toggle-password');                 
            } else {
                x.type = "password";
                $(this).removeClass('zmdi zmdi-eye field-icon toggle-password');  
                $(this).addClass('zmdi field-icon toggle-password zmdi-eye-off'); 
            }
      });
    </script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
