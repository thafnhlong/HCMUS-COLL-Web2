{{#section 'title'}}Danh sách bài viết đã được duyệt{{/section}}

<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Danh sách bài viết đã được duyệt</h1>

<div class="row">
  <div class="col-lg-12">

    <!-- Circle Buttons -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <table class="table table-hover mb-0">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Tiêu đề</th>
              <th scope="col">Trạng thái</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each postList}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{title}}</td>
              <td>
              {{#if isPublish}}
                <span class="badge badge-success">Đã xuất bản</span>
              {{else}}
                <span class="badge badge-warning">Chưa xuất bản</span>
              {{/if}}
              {{#if premium}}
                <span class="badge badge-primary">Premium</span>
              {{/if}}
              </td>
              <td class='text-right'>
              {{#if isPublish}}
                <a target='_blank' class="btn btn-sm btn-outline-primary" href="/post/{{id}}" role="button"><i class="fa fa-eye" aria-hidden="true"></i></a>
              {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
    {{#if pag}}
    <nav>
      <ul class="pagination justify-content-center list-page">
        <li class="page-item {{#unless prev.isValid}}disabled{{/unless}}">
          <a class="page-link rounded" href="?page={{prev.page}}" tabindex="-1"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        </li>
        <li class="page-item active">
          <a class="page-link rounded" href="#">{{page}} <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item {{#unless next.isValid}}disabled{{/unless}}">
          <a class="page-link rounded" href="?page={{next.page}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
        </li>
      </ul>
    </nav>
    {{/if}}
  </div>
</div>