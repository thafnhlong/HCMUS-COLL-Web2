{{#section 'title'}}Thêm từ khóa (TAG){{/section}}
{{#section 'css'}}
<link href="/public/css/sweetalert2.min.css" rel="stylesheet" />
{{/section}}
<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Thêm từ khóa</h1>

<div class="row">
  <div class="col-lg-12">

    <!-- Circle Buttons -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin</h6>
      </div>
      <form method='post' class="form" id="form">
        <div class="card-body">
          <div class="form-group mb-2">
            <label>Tên từ khóa</label>
            <div class="input-group">
              <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-tags"
                    aria-hidden="true"></i></span></div>
              <input id="input" name='name' type="text" class="form-control" placeholder="Tên từ khóa" />
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-primary mr-2">Thêm</button>
        </div>
      </form>
      <!--end::Form-->
    </div>

  </div>
</div>

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="/public/js/sweetalert2.min.js"></script>
<script>
  function validate() {
    const tag = $('#input').val();
    if (!tag) {
      Swal.fire({
        position: 'top-end',
        icon: 'error',
        title: 'Vui lòng điền tag',
        showConfirmButton: false,
        timer: 1500,
        width: 300,
        customClass: 'swal-height'
      });
    }
    else {
      $('#form').off('submit').submit();
    }
  }
  ;
  // val-from add
  $('#form').on('submit', function (e) {
    e.preventDefault();
    validate()
  });
</script>
{{/section}}