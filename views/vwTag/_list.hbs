{{#section 'title'}}Danh sách từ khóa (TAG){{/section}}

<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Danh sach tu khoa</h1>

<div class="row">
  <div class="col-lg-12">

    <!-- Circle Buttons -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <table class="table table-hover mb-0">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Ten</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each tagList}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{name}}</td>
              <td class='text-right'>
                <a class="btn btn-sm btn-outline-success" href="./edit/{{id}}" role="button"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a class="btn btn-sm btn-outline-danger" onclick='deleteFormSubmit("Tag",{{id}})' href="#" role="button"><i class="fa fa-trash" aria-hidden="true"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
    {{#if pag}}
    <nav>
      <ul class="pagination justify-content-center list-page">
        <li class="page-item {{#unless prev.isValid}}disabled{{/unless}}">
          <a class="page-link rounded" href="?page={{prev.page}}" tabindex="-1"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        </li>
        <li class="page-item active">
          <a class="page-link rounded" href="#">{{page}} <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item {{#unless next.isValid}}disabled{{/unless}}">
          <a class="page-link rounded" href="?page={{next.page}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
        </li>
      </ul>
    </nav>
    {{/if}}
  </div>
</div>
<form id='frmSend' style='display:none' method='post' action='./delete'>
  <input type="text" name="id">
</form>